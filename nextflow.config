/*
 * Nextflow configuration file
 */

// Pipeline parameters
params {
    input_pdb = "chr1.pdb"
    outdir = "results"
}

// Process configuration
process {
    // Default resources
    cpus = 1
    memory = '4 GB'
    time = '1h'
    
    // Process-specific configuration
    withName: NETWORK_ANALYSIS {
        cpus = 2
        memory = '8 GB'
    }
    
    withName: SASA_ANALYSIS {
        cpus = 2
        memory = '8 GB'
    }
    
    withName: BIOLOGICAL_FUNCTIONS {
        cpus = 2
        memory = '8 GB'
    }
    
    withName: CREATE_DASHBOARD {
        cpus = 1
        memory = '4 GB'
    }
}

// Execution profiles
profiles {
    standard {
        process.executor = 'local'
    }
    
    docker {
        docker.enabled = true
        process.container = 'python:3.9'
    }
    
    conda {
        conda.enabled = true
        process.conda = 'python=3.9 numpy pandas matplotlib'
    }
}

// Report configuration
report {
    enabled = true
    file = "${params.outdir}/pipeline_report.html"
}

timeline {
    enabled = true
    file = "${params.outdir}/timeline.html"
}

trace {
    enabled = true
    file = "${params.outdir}/trace.txt"
}
